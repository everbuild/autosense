{
    "buttons": [
        {
            "id": "btn1",
            "name": "button 1",
            "onPress": "lights.lit1.toggle()",
            "onRelease": ""
        },
        {
            "id": "btn2",
            "name": "button all off",
            "moduleId": "mod1",
            "pin": 0,
            "onPress": "lights.forEach(function (light) { light.turnOff(); })",
            "onRelease": ""
        }
    ],
    "lights": [
        {
            "id": "lit1",
            "name": "light 1"
        }
    ],
    "modules": [
        {
            "id": "mod1",
            "busNumber": 1,
            "address": "01",
            "buttons": {
                "0": "btn1",
                "1": "btn2"
            },
            "lights": {
                "0": "lit1"
            }
        }
    ],
    "maxPressDuration": 1000,
    "host": "localhost",
    "port": 80
}